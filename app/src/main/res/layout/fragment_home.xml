<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".view.HomeFragment"
    android:background="#FFFFFF"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        >
        <Spinner
            android:id="@+id/spinnerRooms"
            android:layout_width="200dp"
            android:layout_height="60dp"
            android:fontFamily="serif"
            android:background="@drawable/rounded_corners"/>

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/btnMe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:elevation="0dp"
            android:layout_gravity="top|end"
            android:layout_marginLeft="120dp"
            app:backgroundTint="#FFFFFF"
            app:rippleColor="@color/white"
            app:srcCompat="@drawable/baseline_account_circle_24"
            app:tint="#00BFFF" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/infoLayout"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="@drawable/mayvanang"
        android:orientation="vertical"
        android:padding="16dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/ivWeatherIcon"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:src="@drawable/may"
                android:fontFamily="serif"
                />

            <TextView
                android:id="@+id/tvTemp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="20°C "
                android:textColor="#000000"
                android:fontFamily="serif"
                android:textSize="40dp"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvWeatherDescription"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:fontFamily="serif"
                android:maxLines="2"
                android:text="Trời có mây, nắng nhẹ"
                android:textColor="#000000"
                android:textSize="16dp"
                android:textStyle="italic" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center|bottom"
                android:layout_marginLeft="50dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvHumidity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:textColor="#000000"
                    android:fontFamily="serif"
                    android:textStyle="bold"
                    android:textSize="18dp"
                    android:text="80% " />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#000000"
                    android:textSize="16dp"
                    android:fontFamily="serif"
                    android:text="Độ ẩm " />


            </LinearLayout>

            <LinearLayout
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center|bottom"
                android:layout_marginLeft="50dp"
                android:fontFamily="serif"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvClouds"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    android:fontFamily="serif"
                    android:textSize="18dp"
                    android:layout_marginLeft="3dp"
                    android:text="20% " />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#000000"
                    android:textSize="16dp"
                    android:fontFamily="serif"
                    android:text="Mây" />


            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvAllDevices"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tất cả thiết bị"
                android:fontFamily="serif"
                android:layout_margin="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:textSize="16dp"
                android:textStyle="bold"
                android:clickable="true"
                />

            <TextView
                android:id="@+id/tvLivingRoom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Phòng khách"
                android:fontFamily="serif"
                android:layout_margin="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:textSize="16dp"
                android:textStyle="bold"
                android:clickable="true"

                />

            <TextView
                android:id="@+id/tvBedRoom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Phòng ngủ"
                android:fontFamily="serif"
                android:layout_margin="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:textSize="16dp"
                android:textStyle="bold"
                android:clickable="true"


                />

            <TextView
                android:id="@+id/tvKitchen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Phòng bếp"
                android:fontFamily="serif"
                android:layout_margin="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:textSize="16dp"
                android:textStyle="bold"
                android:clickable="true"


                />

            <TextView
                android:id="@+id/tvBathRoom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Phòng tắm"
                android:fontFamily="serif"
                android:layout_margin="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:textSize="16dp"
                android:textStyle="bold"
                android:clickable="true"

                />

        </LinearLayout>

    </HorizontalScrollView>

    <FrameLayout
        android:id="@+id/deviceListContainer"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        />



</LinearLayout>